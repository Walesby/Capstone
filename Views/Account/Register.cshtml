
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>
<p>@ViewBag.Message</p>
<form asp-action="Register" asp-controller="Account">
    <label asp-for="FirstName"></label>
    <input asp-for="FirstName" placeholder="Your first name goes here" />
    <label asp-for="LastName"></label>
    <input asp-for="FirstName" placeholder="Your last name goes here" />
    <label asp-for="UserName"></label>
    <input asp-for="UserName" placeholder="Your user name goes here" />
    <label asp-for="Password"></label>
    <input asp-for="Password" placeholder="Your password goes here" />
    <input type="submit" />
</form>
<div>
    <a asp-controller="Account" asp-action="Login">Login</a>
</div>