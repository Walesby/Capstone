@model User
@{
    ViewData["Title"] = "Login";
}
<h1>Login</h1>
<p>@ViewBag.Message</p>


<form asp-controller="Account" asp-action="Login" method="post">
    <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" name="UserName">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="PasswordHash">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

