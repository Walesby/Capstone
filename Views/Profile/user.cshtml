@model Capstone.Models.User
@{
    var imagePath = Model.ProfileImagePath;
    var user = Model.UserName;
    ViewData["Title"] = "Profile";
    Layout = "/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-12">
        <h2>@user's Profile</h2>
    </div>
</div>
<div class="row">
    <div class="col-3">
        <div class="row">
            <div class="col-12">               
                <img src="@imagePath" height="225" width="225"/>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <a asp-controller="List" asp-action="AnimeList" asp-route-username="@user">Anime List</a>
            </div>
            <div class="col-12">
                <button type="button" class="btn btn-dark btn-block">Manga List</button>
            </div>
            <div class="col-12">
                <button type="button" class="btn btn-dark btn-block">Light Novel List</button>
            </div>
        </div>
    </div>
    <div class="col-9">
        <div class="row">
            <div class="col-6">
                <h4>User Stats</h4>
            </div>
            <div class="col-6">
                <h4>User Last Updates</h4>
            </div>
        </div>
        <div class="row" id="animestats">
            <div class="col-6">
                <h4>Anime</h4>
                <p>Watching: 10</p>
                <p>Completed: 10</p>
                <p>On-Hold: 10</p>
                <p>Dropped: 10</p>
                <p>Plan to watch: 10</p>
            </div>
            <div class="col-6">
                <h4>Anime</h4>
                <ol>
                    <li>Attack on titan</li>
                    <li>My hero academia</li>
                    <li>Berserk</li>
                    <li>Tokyo Ghoul</li>
                    <li>Re:Zero</li>
                </ol>
            </div>
        </div>
        <div class="row" id="mangastats">
            <div class="col-6">
                <h4>Manga</h4>
                <p>Reading: 10</p>
                <p>Completed: 10</p>
                <p>On-Hold: 10</p>
                <p>Dropped: 10</p>
                <p>Plan to read: 10</p>
            </div>
            <div class="col-6">
                <h4>Manga</h4>
                <ol>
                    <li>Attack on titan</li>
                    <li>My hero academia</li>
                    <li>Berserk</li>
                    <li>Tokyo Ghoul</li>
                    <li>Re:Zero</li>
                </ol>
            </div>
        </div>
        <div class="row" id="lightnovelstats">
            <div class="col-6">
                <h4>Light Novel</h4>
                <p>Reading: 10</p>
                <p>Completed: 10</p>
                <p>On-Hold: 10</p>
                <p>Dropped: 10</p>
                <p>Plan to read: 10</p>
            </div>
            <div class="col-6">
                <h4>Light Novel</h4>
                <ol>
                    <li>Re:Zero</li>
                    <li>Overlord</li>
                    <li>Re:Zero</li>
                    <li>Re:Zero</li>
                    <li>Re:Zero</li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-8">
                <h4>Favorites</h4>
            </div>
            <div class="col-4">
                <button type="button" class="btn btn-dark btn-block">Update Favorites</button>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Anime</th>
                            <th>Manga</th>
                            <th>Light Novel</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Re:Zero</td>
                            <td></td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

