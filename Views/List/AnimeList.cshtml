@model IEnumerable<Capstone.Models.AnimeItem>
@{
    ViewData["Title"] = "User Anime List";
    Layout = "/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-12">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Series Title</th>
                    <th scope="col">Score</th>
                    <th scope="col">Progress</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var counter = 0;
                }
                @foreach (var anime in Model)
                {
                    counter += 1;
                    <tr>
                        <td>
                            @counter
                        </td>
                        <td>
                            @Html.DisplayFor(model => anime.Title)
                        </td>
                        <td>
                        </td>
                        <td>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

