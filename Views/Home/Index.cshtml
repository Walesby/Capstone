@model Capstone.Models.HomePageViewModel
@{
    ViewData["Title"] = "Home Page";
    <link rel="stylesheet" href="~/css/home.css" />
}
<div class="row" id="anime">
    <div class="col-sm-12 col-md-12 col-lg-8" id="animerelease">
        <h3>Anime Releases</h3>
        <ul id="responsive1">
            @foreach (var anime in Model.NewestAnime)
            {
                <li>
                    <a asp-controller="Anime" asp-action="Item" asp-route-id="@anime.Id">
                        <span class="title">@anime.Title</span>
                        <img src="@anime.ImagePath" width="160" height="220" />
                    </a>
                </li>
            }
        </ul>
    </div>
    <div class="col-sm-12 col-md-12 col-lg-4" id="popularanime">
        <h3>Most Popular Anime</h3>
        <ul id="responsivepopular1">
            @foreach (var anime in Model.HighestRated)
            {
            <li>                
                <a asp-controller="Anime" asp-action="Item" asp-route-id="@anime.Id">
                    <span class="title">@anime.Title</span>
                    <img src="@anime.ImagePath" width="160" height="220" />
                </a>
            </li>
            }
        </ul>
    </div>
</div>
